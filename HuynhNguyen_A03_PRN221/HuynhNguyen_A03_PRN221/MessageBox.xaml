<Window x:Class="HuynhNguyen_A03_PRN221.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuynhNguyen_A03_PRN221"
     mc:Ignorable="d"
     WindowStyle="None"
     ResizeMode="NoResize"
     WindowStartupLocation="CenterScreen"
     AllowsTransparency="True"
     Title="Alarm" Height="150" Width="300">
    <Grid>
        <Label Content="Tới giờ dạy rồi!" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,35,0,0"/>
        <Button Content="Close" HorizontalAlignment="Center" VerticalAlignment="Top" Click="OkButton_Click" Margin="0,72,0,0" Width="49" Height="20"/>
    </Grid>
</Window>
